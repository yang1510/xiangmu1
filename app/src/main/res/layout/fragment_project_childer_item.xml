<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView

        android:id="@+id/project_childer_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
         />

    <TextView
        android:id="@+id/project_childer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/project_childer_image"
        android:layout_toRightOf="@id/project_childer_image"

        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/project_childer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_childer_title"
        android:layout_toRightOf="@id/project_childer_image"
        android:text="@android:string/unknownName" />

    <TextView
        android:id="@+id/project_childer_auther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_childer_content"
        android:layout_toRightOf="@id/project_childer_image"
        />

    <TextView
        android:id="@+id/project_childer_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/project_childer_auther"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
       />

    <CheckBox
        android:id="@+id/project_childer_chbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_childer_data"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />
</RelativeLayout>