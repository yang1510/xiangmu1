<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/project_childer_image"
        android:paddingRight="5dp"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/project_childer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/project_childer_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/nv_collect"
        android:textColor="@color/Black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/project_childer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rll"
        android:layout_below="@+id/project_childer_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/project_childer_image"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/nv_collect" />

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_childer_image"
        android:layout_toRightOf="@+id/project_childer_image">

        <TextView
            android:id="@+id/project_childer_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nv_collect" />

        <TextView
            android:id="@+id/project_childer_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="@string/nv_collect" />
        <!--<ImageView-->
        <!--android:id="@+id/project_childer_img"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_like_not"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@+id/project_childer_data"/>-->

        <CheckBox
            android:id="@+id/project_childer_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_childer_data"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/chackbox_icon"
            android:button="@null" />
    </RelativeLayout>


</RelativeLayout>
